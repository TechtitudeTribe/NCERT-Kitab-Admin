<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">



    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/background_color">


        <TextView
            android:id="@+id/book_no"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="0"
            android:textColor="@color/creative_red"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/creative_red_light"/>

        <TextView
            android:id="@+id/show_chap_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contents"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/delete_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/background_color"
            android:padding="5dp"
            android:drawableEnd="@drawable/delete"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/show_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/background_color"
            android:padding="5dp"
            android:drawableEnd="@drawable/show"
            android:drawablePadding="5dp"/>


    </LinearLayout>
</LinearLayout>
