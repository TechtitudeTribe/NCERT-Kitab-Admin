<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/splash_screen_home"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/creative_red">

        <ImageButton
            android:id="@+id/splash_screen_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/creative_red"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:gravity="right"
            android:text="NCERT Books"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/splash_screen_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/splash_screen_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7.5dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@id/splash_screen_divider"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A"
                android:textColor="@color/creative_red"
                android:textSize="56sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:text="(English Medium)"
                android:textColor="@color/smoky_black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/splash_screen_divider"
            android:layout_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/splash_screen_hindi"
            android:layout_toRightOf="@id/splash_screen_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="अ"
                android:textStyle="bold"
                android:textColor="@color/creative_red"
                android:textSize="56sp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(हिंदी माध्यम)"
                android:textSize="15sp"
                android:fontFamily="serif"
                android:textColor="@color/smoky_black"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>






    </RelativeLayout>

</RelativeLayout>