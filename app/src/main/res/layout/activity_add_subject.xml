<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    tools:context=".AddSubjectActivity">

    <ImageView
        android:id="@+id/subject_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/subject_image"
        android:background="@drawable/widget_shape"
        android:backgroundTint="@color/creative_red_light"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject Name"
        android:background="@drawable/widget_shape"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/add_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Subject"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/widget_shape"
        android:backgroundTint="@color/creative_red"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="serif"/>








</LinearLayout>